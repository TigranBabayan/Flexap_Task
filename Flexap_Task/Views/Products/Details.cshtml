@model Flexap_Task.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Barcode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Barcode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PLU)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PLU)
        </dd>
        @if (Model.ProductGaleries != null)
        {
             <div class=" row">
                @foreach (var galery in Model.ProductGaleries)
                {
                    <div class="col-lg-6 pb-3 ">
                        <img src="~/images/@galery.ImageUrl"
                             class="float-left"
                             height="200"
                             asp-append-version="true" />
                    </div>
                }
            </div>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
